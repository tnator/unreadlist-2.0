doctype html(lang='en')
html.w-100
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title Radase | #{title}
    link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    //- link(rel='stylesheet' type='text/css' href='/styles/style.css')
    link(rel='stylesheet' type='text/css' href='/styles/style-dark-mode.css')
    //- script(defer='' src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous")
    script(src="https://kit.fontawesome.com/60bb177a79.js" crossorigin="anonymous")
  body.d-flex.flex-column
    //- load header
    include header

    //- hr.m-0

    block messages 
      if locals.flashes 
          //- pre= h.dump(locals)
          - const categories = Object.keys(locals.flashes)
          each category in categories 
              each message in flashes[category]
                  p= message 
                  button(onclick="this.parentElement.remove()")

    //- .mainContent.flex-grow-1
    #body-container.flex-grow-1
      //- content block
      block content

    //- load footer
    //- include footer


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
    script(src='/javascripts/script.js')
    script(src=`https://maps.googleapis.com/maps/api/js?key=${process.env.MAP_KEY}&libraries=places`)
    script(src="/dist/App.bundle.js")