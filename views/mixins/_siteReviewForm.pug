mixin siteReviewForm(site)
    form.reviewer(action=`/reviews/${site._id}` method="POST")
        textarea(name="text" placeholder="Leave a review...")
        .reviewer__meta 
            .reviewer__stars
                each num in [5,4,3,2,1]
                    input.form-control(type="radio" required id=`star${num}` name="rating" value=num)
                    label.form-label(for=`star${num}`) #{num} Stars
            input.button(type="submit" value="Submit Review")